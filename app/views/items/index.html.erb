
<body>
  <div class="page-header">
    <h1 style="text-decoration: underline">Things to do:</h1>
  </div>

<table>
  <% @items.each do |item| %>
  <tr>
    <td>
      <h3><%= item.todo %></h3>
    </td>
    <td>
      <%= link_to 'Edit', edit_item_path(item), class: 'btn btn-outline-success' %>
      <%= link_to 'Delete', item_path(item), class: 'btn btn-outline-success', method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
  <% end %>
</table>
<br>
  <button type="button" class="btn btn-outline-success"><%= link_to "Add now", new_item_path %></button>
</body>
